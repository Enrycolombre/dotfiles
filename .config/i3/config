# ------------------------- Nota sui tasti modificatori ---------------------------- #
# Finalmente ho scoperto l'arcano: questa CM Masterkeys Pro S ha un tasto che blocca #
# i tasti Win che possono essere bloccati sbloccati con Fn+F9 !!!!		     #
# Dal punto di vista dei mod di i3 si ha quanto segue:				     #
# Mod 1 == Alt									     #
# Mod 4 == Win (detto anche Super)						     #
#										     #
# In altri editor, tipo Emacs C-k == Ctrl + k					     #
# 				M-k == Alt +k					     #
# ---------------------------------------------------------------------------------- #

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Inconsolata 18

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# ----------------------------
#    COLORI
# ----------------------------
set $bg-color		#83d667
set $inactive-bg-color	#2f343f
set $text-color		#f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color	#E53935

# colori della finestra
# color-class		bordo		sfondo 		testo				indicatore
client.focused		$bg-color	$bg-color	$text-color			#097799
client.unfocused	$inactive-bg-color $inactive-bg-color $inactive-text-color 	#097799
client.focused-inactive $inactive-bg-color $inactive-bg-color $inactive-text-color 	#097799
client.urgent		$urgent-bg-color   $urgent-bg-color   $text-color	   	#097799

# start dmenu (a program launcher)
#bindsym $mod+d exec dmenu_run

# ------------------------
# Avvia ROFI anzichè dmenu
# ------------------------
bindsym $mod+d exec --no-startup-id rofi -combi-modi window#drun#ssh  -font "System San Francisco Display Bold 18" -show run -lines 3 -eh 2 -width 100 -padding 800 -opacity 55 -bw 0 -bc "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#097799" -theme onedark

